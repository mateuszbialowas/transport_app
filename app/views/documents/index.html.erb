<h1>Dokumenty CMR</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
  <p>Wszystkie dokumenty</p>
  <%= link_to "Nowy dokument", new_document_path, class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">CMR NR</th>
    <th scope="col">AKCJA</th>
  </tr>
  </thead>
  <tbody>
  <% documents.each do |document| %>
    <tr>
      <th scope="row"><%= document.id %></th>
      <td><%= document.cmr_number %></td>
      <td>
        <div class="d-flex gap-2">
          <%= link_to document, class: 'btn btn-outline-primary btn-sm' do %>
            Sczegóły <i class="fa-solid fa-eye"></i>
          <% end %>

          <%= render DownloadCmr.new(document:) %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
